<h1>Create new User</h1>

<%= form_for @user do |form| %>   <!-- form for generates new form -->
	Name: <%= form.text_field :name, placeholder: "Name" %>
	Age: <%= form.text_field :age, placeholder: "Must be an integer" %>
	Password: <%= form.password_field :password, placeholder: "Must be at least 4 chars" %>
	<%= form.submit %>
<% end %>

